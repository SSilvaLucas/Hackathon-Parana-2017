<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lucasjfz.testehack.MainActivity"
    android:backgroundTint="@android:color/white"
    android:backgroundTintMode="screen"
    tools:showIn="@layout/app_bar_main">


    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/desafio1"
        android:layout_below="@+id/textView5"

        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        app:srcCompat="@drawable/desafio2"
        android:layout_alignTop="@+id/imageView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_toRightOf="@+id/imageView10"
        android:layout_toEndOf="@+id/imageView10" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        app:srcCompat="@drawable/desafio3"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/imageView10"
        android:layout_alignStart="@+id/imageView10" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_alignEnd="@+id/imageView11"
        android:layout_alignRight="@+id/imageView11"
        android:layout_alignTop="@+id/imageView12"
        android:layout_toEndOf="@+id/imageView12"
        android:layout_toRightOf="@+id/imageView12"
        app:srcCompat="@drawable/desafio4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView11"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView11"
        android:layout_alignStart="@+id/imageView10"
        android:layout_marginTop="17dp"
        android:text="Desafios"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />
</RelativeLayout>
